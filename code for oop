class Category{ //browse menu
    private Scanner scan;
    
    public Category(Scanner scan){
        this.scan = scan;
    }
    public void display(){
        
        System.out.println("\n--- Categories ---");
        System.out.println("1. Dishes");
        System.out.println("2. Dessert");
        System.out.println("3. Drinks");
        System.out.print("Select a category :) : ");
        
        switch(scan.nextLine()){ //menu choices
            case "1":
                Dishes.dishDisplay(scan);
                break;
            case "2":
                Dessert.dessertDisplay(scan);
                break;
            default :
                System.out.println("Invalid Choice");
                break;
        }
    }
}



class Dishes{ //dishes choices
    public static void dishDisplay(Scanner scan){
        System.out.println("\n---Dishes---");
        System.out.println("1, Trattoria Risotto, 240.00, Dishes");
        System.out.println("2, Requiem Pasta, 210.00, Dishes");
        System.out.println("3, Golden Caprese, 180.00, Dishes");
        System.out.print("Pick your choice: ");

        switch (scan.nextLine()){ 
            case "1":
                System.out.println("You added Trattoria Risotto to your order!");
                break;
            case "2":
                System.out.println("You added Requiem Pasta to your order!");
                break;
            case "3":
                System.out.println("You added Golden Caprese to your order!");
                break;
            default:
                System.out.println("Invalid choice.");
                break;
        }
        
        System.out.print("Enter the amount you want: ");
        String amount = scan.nextLine();
        // System.out.println(7, "Lavender Latte", 90.00, "Drinks");
        // System.out.println(8, "Rose Quartz Fizz", 110.00, "Drinks");
        // System.out.println(9, "Grape Stand Spritz", 105.00, "Drinks");
    }
}

class Dessert{ //dessert choices
