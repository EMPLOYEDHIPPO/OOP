}

class Receipt{
    public static void viewReceipt(){
        if (Main.hp.isEmpty()){
            System.out.println("Empty");
            return;
        }
        
        double total = 0;
        
        for (String item : Main.order.keySet()) {
            int men = Main.order.get(item);
            double qty = Main.hp.get(item);
            double subtotal = qty * men;
            
            System.out.println("subtotal");
        }
    }
}



